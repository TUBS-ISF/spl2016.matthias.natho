import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

import properties.PropertyManager;

public class UserInterfaceTerminal {
	
	public static void main(String[] args){
		if(PropertyManager.getProperty("Terminal")){
			System.out.println("Bitte Gleichung eingeben: (Form: x + Y)");
			BufferedReader in = new BufferedReader(new InputStreamReader(System.in));
			String input = null;
			try {
				input = in.readLine();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			if(input != null){
				String[] bestandteile = input.split(" ");
				System.out.println("Bestandteile: ");
				int ergebnis = 0;
				try{
					int eins = new Integer(bestandteile[0]);
					int zwei = new Integer(bestandteile[2]);
				switch (bestandteile[1]) {
				case "+" : 	ergebnis = MathematischeFunktionen.addieren(eins, zwei);
							break;
				case "-" : 	ergebnis = MathematischeFunktionen.subtrahieren(eins, zwei);
							break;
				case "*" :	ergebnis = MathematischeFunktionen.multiplizieren(eins, zwei);
							break;
				case "/" :	ergebnis = MathematischeFunktionen.dividieren(eins, zwei);
							break;
				default: 	System.err.println("Keine Eingabe erkannt !");
								return;
				}
				System.out.println("Ergebnis ist: " + ergebnis);
			}catch(UnsupportedFeatureException ex){
				
			}
			}else{
				System.err.println("Keine Eingabe erkannt !");
				return;
			}
			
		}
	}

}