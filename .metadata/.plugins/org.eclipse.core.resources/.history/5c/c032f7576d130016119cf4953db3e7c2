import java.util.ArrayList;

public class Hilfsmethoden {
	
	// Gibt die Zahlen (Erstes und Zweites Element der Liste) und die Operation 
	// (Drittes Element) zur√ºck.
	public static Object[] stringAuslesen(String eingabe){
		Object[] rueckgabe = new Object[3];
		String[] bestandteile = eingabe.split(" ");
		try{
		int eins = new Integer(bestandteile[0]);
		int zwei = new Integer(bestandteile[2]);
		rueckgabe[0] = eins;
		rueckgabe[1] = zwei;
		} 	catch(Exception e){
			System.out.println(e.getMessage());
		}
		
		switch (bestandteile[1]) {
		case "+" : 	rueckgabe[2] = MathOps.Plus;
					break;
		case "-" : 	rueckgabe[2] = MathOps.Minus;
					break;
		case "*" :	rueckgabe[2] = MathOps.Mal;
					break;
		case "/" :	rueckgabe[2] = MathOps.Geteilt;
					break;
		default: 	System.err.println("Keine Eingabe erkannt !");
					rueckgabe[2] = MathOps.Fehler;
					break;
		}
		return rueckgabe;
	}
}
