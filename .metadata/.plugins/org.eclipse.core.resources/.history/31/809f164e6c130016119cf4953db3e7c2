import java.util.ArrayList;

public class Hilfsmethoden {
	
	// Gibt die Zahlen (Erstes und Zweites Element der Liste) und die Operation 
	// (Drittes Element) zur√ºck.
	public static ArrayList<Object> stringAuslesen(String eingabe){
		ArrayList rueckgabe = new ArrayList();
		String[] bestandteile = eingabe.split(" ");
		try{
		int eins = new Integer(bestandteile[0]);
		int zwei = new Integer(bestandteile[2]);
		rueckgabe.add(eins);
		rueckgabe.add(zwei);
		} 	catch(Exception e){
			System.out.println(e.getMessage());
		}
		
		switch (bestandteile[1]) {
		case "+" : 	rueckgabe.add(MathOps.Plus);
					break;
		case "-" : 	rueckgabe.add(MathOps.Minus);
					break;
		case "*" :	rueckgabe.add(MathOps.Mal);
					break;
		case "/" :	rueckgabe.add(MathOps.Geteilt);
					break;
		default: 	System.err.println("Keine Eingabe erkannt !");
					rueckgabe.add(MathOps.Fehler);
					break;
		}
		return rueckgabe;
	}
}
